<%= form_for(@course) do |f| %>

  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> ont empéché l'enregistrement de cette note de frais:</h2>

      <ul>
        <% @course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :'Field' %><br>
    <%= f.text_field :field %>
  </div>
  <div class="field">
    <%= f.label :'Teacher' %><br>
    <%= f.text_field :teacher %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>


<% end %>
